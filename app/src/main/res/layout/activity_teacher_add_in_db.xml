<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:background="@drawable/back1"
tools:context="com.cseacademia.mominulcse1213.cseacademia.TeacherAddInDB">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/tname"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:padding="5dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            >
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Designation: "/>

        <EditText
            android:layout_weight="3"
            android:id="@+id/tdesignation"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Email: "/>

        <EditText
            android:id="@+id/temail"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Phone: "/>

        <EditText
            android:id="@+id/tphone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:inputType="phone" />

    </LinearLayout>

    <Button
        android:id="@+id/tsubmit"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit Teacher Info"
        android:textAllCaps="false"
        android:background="@drawable/edit_text_style3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

</LinearLayout>

</ScrollView>
