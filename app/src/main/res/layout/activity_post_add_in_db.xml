<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:background="@drawable/back1"
tools:context="com.cseacademia.mominulcse1213.cseacademia.PostAddInDB">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Session: "
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/postspinnersession"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:hint="2012-13"
            android:padding="5dp"
            android:inputType="textPersonName"

            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PostTimeOut: "/>

        <EditText
            android:id="@+id/postouttime"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:padding="5dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:hint="01/10/2018 - 02:30 pm"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PostingTime: "/>

        <TextView
            android:layout_weight="3"
            android:id="@+id/postingtime"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/postdes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:gravity="start"
        android:hint="Post Description"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/postsubmit"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Submit Post"
        android:background="@drawable/edit_text_style3"
        android:textAllCaps="false"
        android:textSize="25dp" />

</LinearLayout>

</ScrollView>
