<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/editteachername"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"

                    >
                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Designation: "/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/editteacherdesignation"
                    android:layout_width="0dp"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Email: "/>

                <EditText
                    android:id="@+id/editteacheremail"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Phone: "/>

                <EditText
                    android:id="@+id/editteacherphone"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="8"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/teacherdelete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_style3"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/teacherupdate"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="Update"
                    android:background="@drawable/edit_text_style3"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>